<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/container_cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touchable_background_white">

            <ImageView
                android:id="@+id/cast_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/cast_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cast_image"
                android:layout_alignTop="@id/cast_image"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/black_87pc"
                android:textStyle="bold"
                android:text="Title"/>

            <TextView
                android:id="@+id/cast_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cast_title"
                android:layout_alignLeft="@id/cast_title"
                android:layout_marginBottom="24dp"
                android:layout_marginRight="16dp"
                android:ellipsize="end"
                android:textColor="@color/black_87pc"
                android:text="Description"/>

            <TextView
                android:id="@+id/cast_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cast_description"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="11dp"
                android:layout_marginRight="16dp"
                android:ellipsize="end"
                android:textColor="@color/black_87pc"
                android:text="Author"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>